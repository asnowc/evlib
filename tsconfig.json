{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "lib": ["ES2018"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "evlib/*": ["./src/*.js"],
      "evlib": ["./src/core/mod.js"]
    },
    "allowJs": true
  }
}
